<div class="row">
    <div class="card bg-dark text-white">
      <div class="card-header">
        FORMULARIO PARA REGISTRARSE
      </div>
      <div class="card-body">
        <form action="/auth/signup" method="POST">
          <div class="mb-3">
            <label for="name">Nombre:</label>
            <input
              type="text"
              class="form-control"
              name="name"
              placeholder="Nombre"
              value="{{name}}"
            />
          </div>
          <div class="mb-3">
            <label for="email">Email:</label>
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="Email"
              value="{{email}}"
            />
          </div>
          <div class="mb-3">
            <label for="password">Contrase単a</label>
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Contrase単a"
              value="{{password}}"
            />
          </div>
          <div class="mb-3">
            <label for="confirm_password">Confirma Constrase単a:</label>
            <input
              type="password"
              class="form-control"
              name="confirm_password"
              placeholder="Confirmar Contrase単a"
              value="{{confirm_password}}"
            />
          </div>
          <button class="btn btn-primary btn-block">
            Registrarse
          </button>
        </form>
      </div>
    </div>
</div>